<%= provide(:title, "Sign Up") %>
<h1>Sign up!</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    #Generates a form corresponding to a certain user and submit url, then passes it into the block so it can generate html elements
    <%= form_for(@user, url: signup_path) do |user_form| %>
      <%= render 'shared/error_messages' %>
      
      <%= user_form.label :name %>
      <%= user_form.text_field :name, class: 'form-control' %>
      
      <%= user_form.label :email %>
      <%= user_form.email_field :email, class: 'form-control' %>
      
      <%= user_form.label :password %>
      <%= user_form.password_field :password, class: 'form-control' %>
      
      <%= user_form.label :password_confirmation, "Confirmation" %>
      <%= user_form.password_field :password_confirmation, class: 'form-control' %>
      
      <%= user_form.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
