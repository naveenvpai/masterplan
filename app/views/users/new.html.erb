<%= provide(:title, "Sign Up") %>
<h1>Sign up!</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |html_generator| %>
      <%= render 'shared/error_messages' %>
      
      <%= html_generator.label :name %>
      <%= html_generator.text_field :name, class: 'form-control' %>
      
      <%= html_generator.label :email %>
      <%= html_generator.email_field :email, class: 'form-control' %>
      
      <%= html_generator.label :password %>
      <%= html_generator.password_field :password, class: 'form-control' %>
      
      <%= html_generator.label :password_confirmation, "Confirmation" %>
      <%= html_generator.password_field :password_confirmation, class: 'form-control' %>
      
      <%= html_generator.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
